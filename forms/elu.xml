<?xml version="1.0" encoding="utf-8"?><form>    
        <fieldset 
        name="details" 
        label="Détails de l'élu">  

        <field
        name="id"             
        type="hidden"        
        />        

        <field            
            name="nom"            
            type="text"            
            label="Nom"            
            required="true"            
            class="input-xxlarge"        
            />        
            
        <field            
            name="prenom"            
            type="text"            
            label="Prénom"            
            required="true"            
            class="input-xxlarge"        
            />        
        
        <field            
            name="poste"            
            type="text"            
            label="Poste"            
            required="true"            
            class="input-xxlarge"      
            /> 

        <!-- <field
            name="syndicat"            
            type="text"            
            label="Syndicat"            
            required="true"            
            class="input-xxlarge"        
            />        
        -->
        
        <field
            name="syndicat"
            type="sql"
            label="Syndicat"
            query="SELECT id, CONCAT(nom) AS nom FROM #__syndicats ORDER BY nom"
            key_field="id"
            value_field="nom"
            required="true"
            class="input-xxlarge"
        />
        
        <field    
            name="etablissement"            
            type="text"
            label="Établissement"
            class="input-xxlarge"
        />
        <field
            name="commissions"
            type="sql"
            label="Commissions"
            query="SELECT id, nom FROM #__commissions ORDER BY nom"
            key_field="id"
            value_field="nom"
            multiple="true"
            layout="joomla.form.field.list-fancy-select"
            class="advancedSelect"
            required="false"
        />
        <field
            name="missions_local"
            type="textarea"
            label="Missions Local"
            rows="5"
            class="input-xxlarge"
        />
        <field
            name="cse_local"
            type="text"
            label="CSE Local"
            class="input-xxlarge"
        />

        <field
            name="telephone"
            type="textarea"
            label="Téléphone"
            description="Optionnel, indiquez le numéro de téléphone de l'élu"
            class="input-xxlarge"
        />
        <field
            name="mail"
            type="textarea"
            label="Email"
            description="Optionnel, indiquez l'adresse email de l'élu"
            class="input-xxlarge"
        />
        <field
            name="adresse"
            type="textarea"
            label="Adresse"
            description="Optionnel, indiquez l'adresse de l'élu."
            class="input-xxlarge"
        />

        <field
            name="ville"
            type="text"
            label="Ville"
            description="Saisissez le nom de la ville (min. 3 caractères)"
            class="input-xxlarge ville-autocomplete"
        />
        <field
            name="photo"
            type="media"
            label="Photo"
            directory="elus"
        />
        <field
            name="fichier"
            type="file"
            label="Fichier"
            accept="application/pdf"
        />
        <field
            name="published"
            type="list"
            label="JSTATUS"
            default="1"
            class="form-select-color-state"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
            name="ordering"
            type="ordering"
            label="JFIELD_ORDERING_LABEL"
            content_type="com_elus.elu"
        />
    </fieldset>
</form>