<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="Détails du syndicat à ajouter">
        <field
            name="id"
            type="hidden"
        />

        <field
            name="nom"
            type="text"
            label="Nom du syndicat."
            description="Entrez le nom du syndicat"
            class="input-xxlarge"
            size="40"
            required="true"
        />

        <field
            name="description"
            type="textarea"
            label="Description"
            description="Description du syndicat"
            class="input-xxlarge"
            rows="5"
            cols="40"
        />

       <field
            name="photo"
            type="media"
            label="Photo"
            preview="true"
            directory="images"
            layout="joomla.form.field.media"
            hide_none="false"
            allowed_extensions="jpg,jpeg,png,gif,webp"
        />

        <field
            name="state"
            type="list"
            label="JSTATUS"
            class="form-select-color-state"
            size="1"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
        </field>
    </fieldset>
</form>